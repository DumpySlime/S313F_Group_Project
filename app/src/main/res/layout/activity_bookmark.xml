<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmarked Stops"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/stop_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_add_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Stop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bookmarked Places"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp" />

        <LinearLayout
            android:id="@+id/place_list_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

        <Button
            android:id="@+id/btn_add_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Place" />

    </LinearLayout>
</ScrollView>